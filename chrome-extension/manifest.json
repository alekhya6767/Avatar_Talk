{
  "manifest_version": 3,
  "name": "Avatar Translator",
  "version": "1.0.0",
  "description": "Continuous tab audio translation (ENâ†’ES).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabCapture",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Avatar Translator"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
